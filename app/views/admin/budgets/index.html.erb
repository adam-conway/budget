<h1>All Budgets</h1>

<div class="row">
  <% @budgets.each do |budget| %>
  <div class="col-sm-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= budget.name %> budget</h5>
        <p class="card-text">There are <%= budget.categories.count %> categories in this budget: <%= budget.categories.map(&:title).join(", ") %></p>
        <a href="/users/<%= budget.user.id%>/budgets/<%= budget.id %>" class="btn btn-primary">Go to budget</a>
      </div>
    </div>
  </div>
  <% end %>
</div>
